<template>
    <view class="edit">
            <input confirm-type="完成" bindinput="bindInput"/>
            <button @tap="tap">发布</button>
    </view>
</template>

<script>
    import wepy from 'wepy'

    export default class Index extends wepy.component {
        data = {
            inputValue: ''
        }
        methods = {
            tap (e) {
                this.$emit('click', this.inputValue)
            },
            bindInput (e) {
                this.inputValue = e.detail.value
            }
        }
    }
</script>

