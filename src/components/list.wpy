<template>
    <view class="list">
        <repeat for="{{list}}" key="index" index="index" item="item">
            <v-item :item="item" @click.user="tap"></v-item>
        </repeat>
    </view>
</template>

<script>
    import wepy from 'wepy'
    import item from './item'

    export default class Index extends wepy.component {
        props = {
            list: {}
        }
        components = {
            'v-item': item
        }
        methods = {
            tap (e) {
                this.$emit('itemClick', e)
            }
        }
    }
</script>

